<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AI_Bible_App.Maui"
             xmlns:converters="clr-namespace:AI_Bible_App.Maui.Converters"
             x:Class="AI_Bible_App.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/EnhancedTheme.xaml" />
                <ResourceDictionary Source="Resources/Styles/ScriptureThemes.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Scaled Font Sizes (dynamically updated by FontScaleService) -->
            <x:Double x:Key="ScaledCaptionSize">10</x:Double>
            <x:Double x:Key="ScaledBodySize">14</x:Double>
            <x:Double x:Key="ScaledSubtitleSize">16</x:Double>
            <x:Double x:Key="ScaledTitleSize">18</x:Double>
            <x:Double x:Key="ScaledHeaderSize">24</x:Double>
            <x:Double x:Key="ScaledDisplaySize">28</x:Double>
            <x:Double x:Key="ScaledSize10">10</x:Double>
            <x:Double x:Key="ScaledSize11">11</x:Double>
            <x:Double x:Key="ScaledSize12">12</x:Double>
            <x:Double x:Key="ScaledSize13">13</x:Double>
            <x:Double x:Key="ScaledSize14">14</x:Double>
            <x:Double x:Key="ScaledSize15">15</x:Double>
            <x:Double x:Key="ScaledSize16">16</x:Double>
            <x:Double x:Key="ScaledSize18">18</x:Double>
            <x:Double x:Key="ScaledSize20">20</x:Double>
            <x:Double x:Key="ScaledSize24">24</x:Double>
            <x:Double x:Key="ScaledSize28">28</x:Double>
            <x:Double x:Key="ScaledSize32">32</x:Double>
            
            <!-- Device-Specific Responsive Sizes -->
            <!-- Font Sizes -->
            <OnIdiom x:Key="TitleFontSize" x:TypeArguments="x:Double"
                     Phone="20" Tablet="24" Desktop="28" />
            <OnIdiom x:Key="SubtitleFontSize" x:TypeArguments="x:Double"
                     Phone="14" Tablet="16" Desktop="18" />
            <OnIdiom x:Key="BodyFontSize" x:TypeArguments="x:Double"
                     Phone="13" Tablet="14" Desktop="15" />
            <OnIdiom x:Key="CaptionFontSize" x:TypeArguments="x:Double"
                     Phone="10" Tablet="11" Desktop="12" />
            <OnIdiom x:Key="ButtonFontSize" x:TypeArguments="x:Double"
                     Phone="14" Tablet="15" Desktop="16" />
            
            <!-- Spacing & Layout -->
            <OnIdiom x:Key="PageMargin" x:TypeArguments="Thickness"
                     Phone="10" Tablet="20" Desktop="30" />
            <OnIdiom x:Key="CardSpacing" x:TypeArguments="x:Double"
                     Phone="8" Tablet="12" Desktop="16" />
            <OnIdiom x:Key="SectionSpacing" x:TypeArguments="x:Double"
                     Phone="12" Tablet="16" Desktop="20" />
            
            <!-- Character Card Sizes -->
            <OnIdiom x:Key="CarouselCardWidth" x:TypeArguments="x:Double"
                     Phone="280" Tablet="350" Desktop="420" />
            <OnIdiom x:Key="CarouselCardHeight" x:TypeArguments="x:Double"
                     Phone="380" Tablet="450" Desktop="520" />
            <OnIdiom x:Key="AvatarSize" x:TypeArguments="x:Double"
                     Phone="60" Tablet="70" Desktop="80" />
            
            <!-- Button Sizes -->
            <OnIdiom x:Key="ButtonHeight" x:TypeArguments="x:Double"
                     Phone="44" Tablet="48" Desktop="52" />
            <OnIdiom x:Key="ButtonMinWidth" x:TypeArguments="x:Double"
                     Phone="100" Tablet="120" Desktop="140" />
            
            <!-- Icon Sizes -->
            <OnIdiom x:Key="IconSize" x:TypeArguments="x:Double"
                     Phone="20" Tablet="22" Desktop="24" />
            <OnIdiom x:Key="LargeIconSize" x:TypeArguments="x:Double"
                     Phone="30" Tablet="35" Desktop="40" />
            
            <!-- Converters -->
            <converters:StringEqualConverter x:Key="StringEqualConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:RatingOpacityConverter x:Key="RatingOpacityConverter"/>
            <converters:MessageToRatingTupleConverter x:Key="MessageToRatingTupleConverter"/>
            <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
            <converters:UtcToLocalTimeConverter x:Key="UtcToLocalTimeConverter"/>
            <converters:ReflectionTypeToEmojiConverter x:Key="ReflectionTypeToEmojiConverter"/>
            <converters:BoolToStarConverter x:Key="BoolToStarConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:BoolToMicIconConverter x:Key="BoolToMicIconConverter"/>
            <converters:BoolToMicColorConverter x:Key="BoolToMicColorConverter"/>
            <converters:BoolToPlaceholderConverter x:Key="BoolToPlaceholderConverter"/>
            <converters:BoolToVoiceLabelConverter x:Key="BoolToVoiceLabelConverter"/>
            <converters:BoolToVoiceIconConverter x:Key="BoolToVoiceIconConverter"/>
            <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
            <converters:BoolToSetChangeConverter x:Key="BoolToSetChangeConverter"/>
            <converters:BoolToGeneratingPrayerTextConverter x:Key="BoolToGeneratingPrayerTextConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
            <converters:BoolToDoubleConverter x:Key="BoolToDoubleConverter"/>
            <converters:PercentToDecimalConverter x:Key="PercentToDecimalConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:ShortNameConverter x:Key="ShortNameConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
