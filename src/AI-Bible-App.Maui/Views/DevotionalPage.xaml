<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AI_Bible_App.Maui.ViewModels"
             xmlns:models="clr-namespace:AI_Bible_App.Core.Models;assembly=AI-Bible-App.Core"
             x:Class="AI_Bible_App.Maui.Views.DevotionalPage"
             x:DataType="vm:DevotionalViewModel"
             Title="{Binding Title}">

    <!-- Hallow gradient background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource HallowDarkPurple}" Offset="0.0" />
            <GradientStop Color="{StaticResource HallowDeepBlue}" Offset="0.5" />
            <GradientStop Color="{StaticResource HallowMidPurple}" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Frame Grid.Row="0" Margin="15,15,15,10" Padding="15"
               BackgroundColor="{StaticResource HallowCardBackground}"
               BorderColor="Transparent"
               CornerRadius="20">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                    <Label Text="ðŸ“– Daily Devotional"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    <Label Text="{Binding TodaysDevotional.Date, StringFormat='{0:dddd, MMMM d, yyyy}'}"
                           FontSize="13"
                           TextColor="{StaticResource HallowTextSecondary}"/>
                </VerticalStackLayout>
                
                <Button Grid.Column="1"
                        Text="ðŸ“œ"
                        Command="{Binding ToggleHistoryCommand}"
                        HeightRequest="44" WidthRequest="44"
                        CornerRadius="22" Padding="0"
                        BackgroundColor="{StaticResource HallowCardHover}"
                        TextColor="{StaticResource HallowTextPrimary}"/>
                
                <Button Grid.Column="2"
                        Text="ðŸ”„"
                        Command="{Binding RefreshDevotionalCommand}"
                        HeightRequest="44" WidthRequest="44"
                        CornerRadius="22" Padding="0"
                        Margin="8,0,0,0"
                        BackgroundColor="{StaticResource HallowAccentPurple}"
                        TextColor="{StaticResource HallowTextPrimary}"/>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <Grid>
                
                <!-- Loading State -->
                <VerticalStackLayout IsVisible="{Binding IsGenerating}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Spacing="15"
                                    Padding="30">
                    <ActivityIndicator IsRunning="True" 
                                      Color="{StaticResource HallowAccentPurple}"
                                      HeightRequest="60"
                                      WidthRequest="60"/>
                    <Label Text="{Binding GeneratingMessage}"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                </VerticalStackLayout>

                <!-- History Panel -->
                <Frame IsVisible="{Binding ShowHistory}"
                       Margin="15" Padding="15"
                       BackgroundColor="{StaticResource HallowCardBackground}"
                       BorderColor="Transparent"
                       CornerRadius="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“œ Recent Devotionals"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <CollectionView ItemsSource="{Binding RecentDevotionals}"
                                       SelectionMode="Single"
                                       SelectionChangedCommand="{Binding ViewDevotionalCommand}"
                                       SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Devotional">
                                    <Frame Margin="0,5" Padding="12"
                                           BackgroundColor="{StaticResource HallowCardHover}"
                                           BorderColor="Transparent"
                                           CornerRadius="10">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Date, StringFormat='{0:MMM d}'}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource HallowAccentPurple}"
                                                   VerticalOptions="Center"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding Title}"
                                                   FontSize="14"
                                                   Margin="10,0"
                                                   LineBreakMode="TailTruncation"
                                                   TextColor="{StaticResource HallowTextPrimary}"
                                                   VerticalOptions="Center"/>
                                            <Label Grid.Column="2"
                                                   Text="{Binding IsRead, Converter={StaticResource BoolToYesNoConverter}, ConverterParameter='âœ“|'}"
                                                   FontSize="16"
                                                   TextColor="{StaticResource HallowAccentPurple}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <Label Text="No previous devotionals yet"
                                       HorizontalOptions="Center"
                                       TextColor="{StaticResource HallowTextMuted}"
                                       Margin="0,20"/>
                            </CollectionView.EmptyView>
                        </CollectionView>
                        <Button Text="Close"
                                Command="{Binding ToggleHistoryCommand}"
                                HeightRequest="40"
                                CornerRadius="20"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Devotional Content -->
                <VerticalStackLayout IsVisible="{Binding IsGenerating, Converter={StaticResource InvertedBoolConverter}}"
                                    Spacing="15"
                                    Padding="15">
                    
                    <!-- Title Card -->
                    <Frame Padding="20"
                           BorderColor="Transparent"
                           CornerRadius="15">
                        <Frame.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource HallowAccentPurple}" Offset="0.0" />
                                <GradientStop Color="{StaticResource HallowRose}" Offset="1.0" />
                            </LinearGradientBrush>
                        </Frame.Background>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding TodaysDevotional.Category}"
                                   FontSize="12"
                                   TextColor="{StaticResource HallowTextPrimary}"
                                   Opacity="0.8"/>
                            <Label Text="{Binding TodaysDevotional.Title}"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource HallowTextPrimary}"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Scripture Card -->
                    <Frame Padding="20"
                           BackgroundColor="{StaticResource HallowCardBackground}"
                           BorderColor="Transparent"
                           CornerRadius="15">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ“œ" FontSize="18"/>
                                <Label Text="Scripture"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource HallowTextSecondary}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding TodaysDevotional.Scripture}"
                                   FontSize="16"
                                   FontAttributes="Italic"
                                   TextColor="{StaticResource HallowTextPrimary}"
                                   LineHeight="1.4"/>
                            <Label Text="{Binding TodaysDevotional.ScriptureReference}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource HallowAccentPurple}"
                                   HorizontalOptions="End"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Reflection Card -->
                    <Frame Padding="20"
                           BackgroundColor="{StaticResource HallowCardBackground}"
                           BorderColor="Transparent"
                           CornerRadius="15">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ’­" FontSize="18"/>
                                <Label Text="Reflection"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource HallowTextSecondary}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding TodaysDevotional.Content}"
                                   FontSize="15"
                                   TextColor="{StaticResource HallowTextPrimary}"
                                   LineHeight="1.5"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Prayer Card -->
                    <Frame Padding="20"
                           BackgroundColor="{StaticResource HallowCardHover}"
                           BorderColor="Transparent"
                           CornerRadius="15">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ™" FontSize="18"/>
                                <Label Text="Prayer"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource HallowTextSecondary}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding TodaysDevotional.Prayer}"
                                   FontSize="15"
                                   FontAttributes="Italic"
                                   TextColor="{StaticResource HallowTextPrimary}"
                                   LineHeight="1.4"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10">
                        <Button Grid.Column="0"
                                Text="âœ“ Mark Complete"
                                Command="{Binding MarkAsReadCommand}"
                                IsEnabled="{Binding TodaysDevotional.IsRead, Converter={StaticResource InvertedBoolConverter}}"
                                HeightRequest="50"
                                CornerRadius="25"
                                BackgroundColor="{StaticResource HallowAccentPurple}"
                                TextColor="{StaticResource HallowTextPrimary}"/>
                        <Button Grid.Column="1"
                                Text="ðŸ“¤ Share"
                                Command="{Binding ShareDevotionalCommand}"
                                HeightRequest="50"
                                CornerRadius="25"
                                BackgroundColor="{StaticResource HallowMidPurple}"
                                TextColor="{StaticResource HallowTextPrimary}"/>
                    </Grid>

                    <!-- Completion Badge -->
                    <Frame IsVisible="{Binding TodaysDevotional.IsRead}"
                           Padding="15"
                           BackgroundColor="{StaticResource HallowCardBackground}"
                           BorderColor="{StaticResource HallowAccentPurple}"
                           CornerRadius="20"
                           HorizontalOptions="Center">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="âœ“" FontSize="16" TextColor="{StaticResource HallowAccentPurple}"/>
                            <Label Text="Completed Today"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource HallowAccentPurple}"/>
                        </HorizontalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
