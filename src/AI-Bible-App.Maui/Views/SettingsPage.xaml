<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AI_Bible_App.Maui.ViewModels"
             x:Class="AI_Bible_App.Maui.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="{Binding Title}">

    <!-- Hallow gradient background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource HallowDarkPurple}" Offset="0.0" />
            <GradientStop Color="{StaticResource HallowDeepBlue}" Offset="0.5" />
            <GradientStop Color="{StaticResource HallowMidPurple}" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">
            
            <!-- Header -->
            <Label Text="âš™ï¸ Settings"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource HallowTextPrimary}"
                   Margin="0,5,0,10"/>
            
            <!-- User Profile Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ‘¤ User Profile"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Frame Grid.Column="0" 
                               WidthRequest="56" HeightRequest="56"
                               CornerRadius="28" Padding="0"
                               BorderColor="Transparent">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource HallowAccentPurple}" Offset="0.0" />
                                    <GradientStop Color="{StaticResource HallowRose}" Offset="1.0" />
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="{Binding CurrentUserEmoji}" 
                                   FontSize="26"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                            <Label Text="{Binding CurrentUserName}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource HallowTextPrimary}"/>
                            <Label Text="{Binding CurrentUserSince, StringFormat='Member since {0:MMM d, yyyy}'}" 
                                   FontSize="12" 
                                   TextColor="{StaticResource HallowTextMuted}"/>
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2"
                                Text="Switch"
                                Command="{Binding SwitchUserCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="15"
                                HeightRequest="40"
                                Padding="15,0"/>
                    </Grid>
                    
                    <!-- Sign Out Button -->
                    <Button Text="ðŸšª Sign Out"
                            Command="{Binding SignOutCommand}"
                            BackgroundColor="{StaticResource HallowRose}"
                            TextColor="White"
                            CornerRadius="15"
                            HeightRequest="44"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Appearance Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸŽ¨ Appearance"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <!-- Theme Selection -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Theme"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Text="Choose how the app looks"
                               FontSize="12"
                               TextColor="{StaticResource HallowTextMuted}"/>
                        <Frame Padding="5" BackgroundColor="{StaticResource HallowCardHover}" 
                               BorderColor="Transparent" CornerRadius="12">
                            <Picker ItemsSource="{Binding ThemeOptions}"
                                    SelectedItem="{Binding SelectedTheme}"
                                    TextColor="{StaticResource HallowTextPrimary}"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <!-- Font Size Selection -->
                    <VerticalStackLayout Spacing="5" Margin="0,10,0,0">
                        <Label Text="Font Size"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Text="Adjust text size for better readability"
                               FontSize="12"
                               TextColor="{StaticResource HallowTextMuted}"/>
                        <Frame Padding="5" BackgroundColor="{StaticResource HallowCardHover}" 
                               BorderColor="Transparent" CornerRadius="12">
                            <Picker ItemsSource="{Binding FontSizeOptions}"
                                    SelectedItem="{Binding SelectedFontSize}"
                                    TextColor="{StaticResource HallowTextPrimary}"/>
                        </Frame>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Offline AI Models Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ¤– Offline AI Models"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <Label Text="Download AI models to chat without internet. Perfect for travel or areas with limited connectivity."
                           FontSize="13"
                           TextColor="{StaticResource HallowTextSecondary}"/>
                    
                    <Button Text="ðŸ“¥ Manage Offline Models"
                            Command="{Binding NavigateToOfflineModelsCommand}"
                            HeightRequest="50"
                            CornerRadius="25"
                            FontAttributes="Bold"
                            TextColor="{StaticResource HallowTextPrimary}">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="{StaticResource HallowAccentPurple}" Offset="0.0" />
                                <GradientStop Color="{StaticResource HallowRose}" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    
                    <Label Text="ðŸ’¡ Tip: Download Phi 3.5 Mini for the best balance of speed and quality"
                           FontSize="11"
                           FontAttributes="Italic"
                           TextColor="{StaticResource HallowTextMuted}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Model Status Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ§  Model Status"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>

                    <Label Text="{Binding ActiveModelName}"
                           FontSize="14"
                           TextColor="{StaticResource HallowTextSecondary}"/>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Status:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding ModelStatusText}"
                               FontAttributes="Bold"
                               TextColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="AI Backend:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Picker Grid.Column="1"
                                ItemsSource="{Binding AiBackendOptions}"
                                SelectedItem="{Binding SelectedAiBackend}"
                                ItemDisplayBinding="{Binding Label}"
                                TextColor="{StaticResource HallowTextPrimary}"/>
                    </Grid>

                    <Label Text="{Binding ModelStatusDetail}"
                           FontSize="12"
                           TextColor="{StaticResource HallowTextMuted}"/>

                    <Label Text="{Binding LastHealthCheckAt, StringFormat='Last check: {0:MMM d, h:mm tt}'}"
                           FontSize="11"
                           TextColor="{StaticResource HallowTextMuted}"/>

                    <Button Text="ðŸ”„ Refresh Model Status"
                            Command="{Binding RefreshModelStatusCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextPrimary}"
                            CornerRadius="20"
                            HeightRequest="44"/>

                    <Label Text="Fallback: If the local model is offline, the app will rely on cached responses."
                           FontSize="11"
                           FontAttributes="Italic"
                           TextColor="{StaticResource HallowTextMuted}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Performance & Debug Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="âš¡ Performance &amp; Debug"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Enable Performance Mode"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsPerformanceModeEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>

                    <Label Text="Reduces background processing and prioritizes faster responses."
                           FontSize="12"
                           TextColor="{StaticResource HallowTextSecondary}"/>

                    <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                        <Label Grid.Column="0"
                               Text="Enable RAG Debug"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsRagDebugEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>

                    <Label Text="{Binding RagStatsSummary}"
                           FontSize="11"
                           TextColor="{StaticResource HallowTextMuted}"/>

                    <Button Text="ðŸ“Œ Refresh RAG Stats"
                            Command="{Binding RefreshRagStatsCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextPrimary}"
                            CornerRadius="20"
                            HeightRequest="44"
                            IsVisible="{Binding IsRagDebugEnabled}"/>

                    <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                        <Label Grid.Column="0"
                               Text="Show Contextual References"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsContextualReferencesEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>

                    <Label Text="Displays scripture sources beneath responses when available."
                           FontSize="11"
                           TextColor="{StaticResource HallowTextMuted}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Learning & Research Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ§  Learning & Research"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Learning:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding LearningStatusText}"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Model:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding LearningModelVersion}"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Last Run:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding LearningLastRun}"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Label Text="{Binding LearningSummary}"
                           FontSize="12"
                           TextColor="{StaticResource HallowTextMuted}"/>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Research Window:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding ResearchWindowText}"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                        <Label Grid.Column="0"
                               Text="Enable Autonomous Learning"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsAutonomousLearningEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Enable Autonomous Research"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsAutonomousResearchEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>

                    <Button Text="ðŸ”„ Refresh Learning Status"
                            Command="{Binding RefreshLearningStatsCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextPrimary}"
                            CornerRadius="20"
                            HeightRequest="44"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Usage Insights Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“ˆ Usage Insights"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>

                    <Label Text="{Binding UsageSummary}"
                           FontSize="12"
                           TextColor="{StaticResource HallowTextSecondary}"/>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Favorite Character:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding FavoriteCharacter}"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Most Searched Book:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding MostSearchedBook}"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Button Text="ðŸ”„ Refresh Insights"
                            Command="{Binding RefreshUsageInsightsCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextPrimary}"
                            CornerRadius="20"
                            HeightRequest="44"/>

                    <Button Text="Reset Usage Metrics"
                            Command="{Binding ResetUsageMetricsCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextSecondary}"
                            CornerRadius="20"
                            HeightRequest="40"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Data Management Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ—‚ï¸ Data Management"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Local Data:"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Label Grid.Column="1"
                               Text="{Binding LocalDataSize}"
                               FontAttributes="Bold"
                               TextColor="{StaticResource HallowTextSecondary}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="6">
                        <Label Grid.Row="0" Text="Chats" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding ChatDataSize}" TextColor="{StaticResource HallowTextPrimary}"/>

                        <Label Grid.Row="1" Text="Prayers" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding PrayerDataSize}" TextColor="{StaticResource HallowTextPrimary}"/>

                        <Label Grid.Row="2" Text="Reflections" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding ReflectionDataSize}" TextColor="{StaticResource HallowTextPrimary}"/>

                        <Label Grid.Row="3" Text="Bookmarks" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding BookmarkDataSize}" TextColor="{StaticResource HallowTextPrimary}"/>

                        <Label Grid.Row="4" Text="Exports" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding ExportDataSize}" TextColor="{StaticResource HallowTextPrimary}"/>

                        <Label Grid.Row="5" Text="RAG Cache" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding RagCacheSize}" TextColor="{StaticResource HallowTextPrimary}"/>
                    </Grid>

                    <Button Text="ðŸ”„ Refresh Storage"
                            Command="{Binding RefreshStorageStatsCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextPrimary}"
                            CornerRadius="20"
                            HeightRequest="44"
                            IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>

                    <Button Text="ðŸ—‘ï¸ Clear Local Data"
                            Command="{Binding ClearLocalDataCommand}"
                            BackgroundColor="{StaticResource HallowRose}"
                            TextColor="White"
                            CornerRadius="20"
                            HeightRequest="44"
                            IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>

                    <Label Text="Clearing data removes chats, prayers, reflections, bookmarks, and cached files on this device."
                           FontSize="11"
                           FontAttributes="Italic"
                           TextColor="{StaticResource HallowTextMuted}"/>

                    <Label Text="Export Local Data"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"
                           Margin="0,10,0,0"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Export Chats"
                                Command="{Binding ExportChatsCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"/>
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Export Prayers"
                                Command="{Binding ExportPrayersCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"/>

                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Export Reflections"
                                Command="{Binding ExportReflectionsCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"/>
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Export Bookmarks"
                                Command="{Binding ExportBookmarksCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"/>
                    </Grid>

                    <Label Text="Exports are saved locally and can be shared from your device."
                           FontSize="11"
                           FontAttributes="Italic"
                           TextColor="{StaticResource HallowTextMuted}"/>

                    <Label Text="Clear Specific Data"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"
                           Margin="0,10,0,0"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Clear Chats"
                                Command="{Binding ClearChatHistoryCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"
                                IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Clear Prayers"
                                Command="{Binding ClearPrayerHistoryCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"
                                IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>

                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Clear Reflections"
                                Command="{Binding ClearReflectionsCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"
                                IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Clear Bookmarks"
                                Command="{Binding ClearBookmarksCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"
                                IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>

                        <Button Grid.Row="2" Grid.Column="0"
                                Text="Clear RAG Cache"
                                Command="{Binding ClearRagCacheCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"
                                IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>

                        <Button Grid.Row="2" Grid.Column="1"
                                Text="Clear Exports"
                                Command="{Binding ClearExportsCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="18"
                                HeightRequest="40"
                                IsEnabled="{Binding IsClearingData, Converter={StaticResource InvertedBoolConverter}}"/>
                    </Grid>

                    <Label Text="{Binding DataClearStatus}"
                           FontSize="11"
                           TextColor="{StaticResource HallowTextMuted}"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Content Moderation Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ›¡ï¸ Content Moderation"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <Label Text="Filter inappropriate language to maintain a respectful environment."
                           FontSize="13"
                           TextColor="{StaticResource HallowTextSecondary}"/>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" 
                               Text="Enable Content Filter"
                               TextColor="{StaticResource HallowTextPrimary}"
                               VerticalOptions="Center"/>
                        <Switch Grid.Column="1" 
                                IsToggled="{Binding IsModerationEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Daily Reminder Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ”” Daily Reminders"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <Label Text="Get a gentle reminder each day for your devotional time."
                           FontSize="13"
                           TextColor="{StaticResource HallowTextSecondary}"/>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" 
                               Text="Enable Daily Reminder"
                               TextColor="{StaticResource HallowTextPrimary}"
                               VerticalOptions="Center"/>
                        <Switch Grid.Column="1" 
                                IsToggled="{Binding IsDailyReminderEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>
                    
                    <!-- Reminder Time (only visible when enabled) -->
                    <VerticalStackLayout Spacing="10" IsVisible="{Binding IsDailyReminderEnabled}">
                        <Label Text="Reminder Time"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Frame Padding="5" BackgroundColor="{StaticResource HallowCardHover}" 
                               BorderColor="Transparent" CornerRadius="12">
                            <TimePicker Time="{Binding ReminderTime}"
                                        Format="h:mm tt"
                                        TextColor="{StaticResource HallowTextPrimary}"/>
                        </Frame>
                        
                        <Label Text="{Binding ReminderTimeDescription}"
                               FontSize="12"
                               TextColor="{StaticResource HallowTextMuted}"
                               FontAttributes="Italic"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- PIN Protection Section -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ” Privacy Protection"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <Label Text="Set a PIN to protect your profile from other users on this device."
                           FontSize="13"
                           TextColor="{StaticResource HallowTextSecondary}"/>
                    
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="3">
                            <Label Text="{Binding HasPinEnabled, Converter={StaticResource BoolToYesNoConverter}, StringFormat='PIN Protection: {0}'}"
                                   FontSize="14"
                                   TextColor="{StaticResource HallowTextPrimary}"/>
                            <Label Text="Your prayers, reflections, and chats stay private"
                                   FontSize="11"
                                   TextColor="{StaticResource HallowTextMuted}"
                                   IsVisible="{Binding HasPinEnabled}"/>
                        </VerticalStackLayout>
                        
                        <!-- Set/Change PIN Button -->
                        <Button Grid.Column="1"
                                Text="{Binding HasPinEnabled, Converter={StaticResource BoolToSetChangeConverter}}"
                                Command="{Binding SetOrChangePinCommand}"
                                BackgroundColor="{StaticResource HallowAccentPurple}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="15"
                                HeightRequest="40"
                                Padding="15,0"
                                WidthRequest="100"/>
                    </Grid>
                    
                    <!-- Remove PIN Button (only visible when PIN is set) -->
                    <Button Text="Remove PIN"
                            Command="{Binding RemovePinCommand}"
                            BackgroundColor="{StaticResource HallowCardHover}"
                            TextColor="{StaticResource HallowTextSecondary}"
                            CornerRadius="15"
                            HeightRequest="40"
                            IsVisible="{Binding HasPinEnabled}"
                            HorizontalOptions="Start"/>

                    <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                        <Label Grid.Column="0"
                               Text="Share anonymized questions to improve the model"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsDataSharingEnabled}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>
                    <Label Text="Only your questions and ratings are used, not personal identity."
                           FontSize="11"
                           TextColor="{StaticResource HallowTextMuted}"/>
                </VerticalStackLayout>
            </Frame>
            
