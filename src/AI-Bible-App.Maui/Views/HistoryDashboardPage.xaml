<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AI_Bible_App.Maui.ViewModels"
             x:Class="AI_Bible_App.Maui.Views.HistoryDashboardPage"
             x:DataType="vm:HistoryDashboardViewModel"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="15">
        
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,5,0,15">
            <Button Grid.Column="0"
                    Text="â—€ Back"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource Primary}"
                    FontSize="14"
                    HeightRequest="36"
                    SemanticProperties.Description="Go back"/>
            <Label Grid.Column="1"
                   Text="ðŸ“Š Your Journey"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource Primary}"
                   AutomationProperties.IsInAccessibleTree="True"/>
            <Button Grid.Column="2"
                    Text="âš™ï¸"
                    Command="{Binding ShowExportOptionsCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource Gray600}"
                    FontSize="20"
                    HeightRequest="36"
                    SemanticProperties.Description="Export options"/>
        </Grid>
        
        <!-- Summary Stats Cards -->
        <ScrollView Grid.Row="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,0,0,15">
            <HorizontalStackLayout Spacing="12">
                <!-- Conversations Card -->
                <Border Padding="15"
                        WidthRequest="130"
                        BackgroundColor="{DynamicResource Primary}"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=4, Opacity=0.3}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’¬"
                               FontSize="28"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalConversations}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Conversations"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.85"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Prayers Card -->
                <Border Padding="15"
                        WidthRequest="130"
                        BackgroundColor="#6B5B95"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=4, Opacity=0.3}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ™"
                               FontSize="28"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalPrayers}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Prayers"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.85"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Reflections Card -->
                <Border Padding="15"
                        WidthRequest="130"
                        BackgroundColor="#4A7C4E"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=4, Opacity=0.3}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“"
                               FontSize="28"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalReflections}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Reflections"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.85"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Days Active Card -->
                <Border Padding="15"
                        WidthRequest="130"
                        BackgroundColor="#C9A227"
                        Shadow="{Shadow Brush=Black, Offset='0,2', Radius=4, Opacity=0.3}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“…"
                               FontSize="28"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding DaysActive}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Days Active"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.85"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </HorizontalStackLayout>
        </ScrollView>
        
        <!-- Tab Selector -->
        <Grid Grid.Row="2" RowDefinitions="Auto,*">
            <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
                <Button Text="ðŸ’¬ Chats"
                        x:Name="ChatsTab"
                        Clicked="OnChatsTabClicked"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White"
                        HeightRequest="36"
                        CornerRadius="18"
                        FontSize="13"
                        Padding="15,0"/>
                <Button Text="ðŸ™ Prayers"
                        x:Name="PrayersTab"
                        Clicked="OnPrayersTabClicked"
                        BackgroundColor="{DynamicResource Gray300}"
                        TextColor="{DynamicResource Gray800}"
                        HeightRequest="36"
                        CornerRadius="18"
                        FontSize="13"
                        Padding="15,0"/>
                <Button Text="ðŸ“ Reflections"
                        x:Name="ReflectionsTab"
                        Clicked="OnReflectionsTabClicked"
                        BackgroundColor="{DynamicResource Gray300}"
                        TextColor="{DynamicResource Gray800}"
                        HeightRequest="36"
                        CornerRadius="18"
                        FontSize="13"
                        Padding="15,0"/>
            </HorizontalStackLayout>
            
            <!-- Chats List -->
            <CollectionView Grid.Row="1"
                            x:Name="ChatsCollection"
                            ItemsSource="{Binding ChatSessions}"
                            IsVisible="True"
                            SelectionMode="Single"
                            SelectionChanged="OnChatSelected">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">
                        <Label Text="ðŸ’¬" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No conversations yet"
                               FontSize="16"
                               TextColor="{DynamicResource Gray500}"
                               HorizontalOptions="Center"/>
                        <Label Text="Start chatting with a biblical character!"
                               FontSize="13"
                               TextColor="{DynamicResource Gray400}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="ðŸ—‘ï¸ Delete"
                                               BackgroundColor="#F44336"
                                               Invoked="OnDeleteChatSwipe"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Padding="12"
                                    Margin="0,5"
                                    BackgroundColor="{DynamicResource CardBackground}"
                                    Shadow="{Shadow Brush=Black, Offset='0,1', Radius=3, Opacity=0.2}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="50,*,Auto" ColumnSpacing="12">
                                    <!-- Character Avatar -->
                                    <Border Grid.Column="0"
                                            WidthRequest="50"
                                            HeightRequest="50"
                                            BackgroundColor="{DynamicResource Primary}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="25"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding CharacterInitial}"
                                               FontSize="22"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                    
                                    <!-- Session Info -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                        <Label Text="{Binding CharacterName}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource TextColor}"/>
                                        <Label Text="{Binding LastMessagePreview}"
                                               FontSize="12"
                                               TextColor="{DynamicResource Gray600}"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>
                                    </VerticalStackLayout>
                                    
                                    <!-- Date/Count -->
                                    <VerticalStackLayout Grid.Column="2" Spacing="3" HorizontalOptions="End">
                                        <Label Text="{Binding FormattedDate}"
                                               FontSize="11"
                                               TextColor="{DynamicResource Gray500}"
                                               HorizontalOptions="End"/>
                                        <Border Padding="8,3"
                                                BackgroundColor="{DynamicResource PrimaryLight}"
                                                HorizontalOptions="End">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding MessageCount, StringFormat='{0} msgs'}"
                                                   FontSize="10"
                                                   TextColor="{DynamicResource Primary}"/>
                                        </Border>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Prayers List -->
            <CollectionView Grid.Row="1"
                            x:Name="PrayersCollection"
                            ItemsSource="{Binding Prayers}"
                            IsVisible="False"
                            SelectionMode="Single"
                            SelectionChanged="OnPrayerSelected">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">
                        <Label Text="ðŸ™" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No prayers saved yet"
                               FontSize="16"
                               TextColor="{DynamicResource Gray500}"
                               HorizontalOptions="Center"/>
                        <Label Text="Generate a prayer from your conversations!"
                               FontSize="13"
                               TextColor="{DynamicResource Gray400}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="ðŸ—‘ï¸ Delete"
                                               BackgroundColor="#F44336"
                                               Invoked="OnDeletePrayerSwipe"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Padding="15"
                                    Margin="0,5"
                                    BackgroundColor="{DynamicResource CardBackground}"
                                    Shadow="{Shadow Brush=Black, Offset='0,1', Radius=3, Opacity=0.2}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{Binding Title}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding FormattedDate}"
                                               FontSize="11"
                                               TextColor="{DynamicResource Gray500}"/>
                                    </Grid>
                                    <Label Text="{Binding PreviewText}"
                                           FontSize="13"
                                           TextColor="{DynamicResource TextColor}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="3"/>
                                    <HorizontalStackLayout Spacing="8">
                                        <Border Padding="6,2"
                                                BackgroundColor="{DynamicResource Gray200}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Style}"
                                                   FontSize="10"
                                                   TextColor="{DynamicResource Gray700}"/>
                                        </Border>
                                        <Border Padding="6,2"
                                                BackgroundColor="{DynamicResource Gray200}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Mood}"
                                                   FontSize="10"
                                                   TextColor="{DynamicResource Gray700}"/>
                                        </Border>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Reflections List -->
            <CollectionView Grid.Row="1"
                            x:Name="ReflectionsCollection"
                            ItemsSource="{Binding Reflections}"
                            IsVisible="False"
                            SelectionMode="Single"
                            SelectionChanged="OnReflectionSelected">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">
                        <Label Text="ðŸ“" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No reflections saved yet"
                               FontSize="16"
                               TextColor="{DynamicResource Gray500}"
                               HorizontalOptions="Center"/>
                        <Label Text="Save meaningful moments from your chats!"
                               FontSize="13"
                               TextColor="{DynamicResource Gray400}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="ðŸ—‘ï¸ Delete"
                                               BackgroundColor="#F44336"
                                               Invoked="OnDeleteReflectionSwipe"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Padding="15"
                                    Margin="0,5"
                                    BackgroundColor="{DynamicResource CardBackground}"
                                    Shadow="{Shadow Brush=Black, Offset='0,1', Radius=3, Opacity=0.2}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{Binding Title}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding FormattedDate}"
                                               FontSize="11"
                                               TextColor="{DynamicResource Gray500}"/>
                                    </Grid>
                                    <Label Text="{Binding Content}"
                                           FontSize="13"
                                           TextColor="{DynamicResource TextColor}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="3"/>
                                    <Label Text="{Binding ScriptureReference}"
                                           FontSize="12"
                                           FontAttributes="Italic"
                                           TextColor="{DynamicResource Secondary}"
                                           IsVisible="{Binding HasScriptureReference}"/>
                                </VerticalStackLayout>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        
        <!-- Export Footer -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
            <Button Grid.Column="0"
                    Text="ðŸ“„ Export PDF"
                    Command="{Binding ExportPdfCommand}"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    FontSize="14"
                    HeightRequest="44"
                    CornerRadius="10"
                    SemanticProperties.Description="Export to PDF"/>
            <Button Grid.Column="1"
                    Text="ðŸ“Š Export CSV"
                    Command="{Binding ExportCsvCommand}"
                    BackgroundColor="{DynamicResource Secondary}"
                    TextColor="White"
                    FontSize="14"
                    HeightRequest="44"
                    CornerRadius="10"
                    SemanticProperties.Description="Export to CSV"/>
        </Grid>
        
        <!-- Loading Overlay -->
        <ActivityIndicator Grid.RowSpan="4"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          Color="{DynamicResource Primary}"
                          WidthRequest="40"
                          HeightRequest="40"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>
