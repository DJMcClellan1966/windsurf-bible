<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AI_Bible_App.Maui.ViewModels"
             x:Class="AI_Bible_App.Maui.Views.InitializationPage"
             x:DataType="vm:InitializationViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">
    
    <Grid BackgroundColor="{DynamicResource PageBackground}"
          Padding="40">
        
        <VerticalStackLayout VerticalOptions="Center"
                            Spacing="20">
            
            <!-- App Icon/Logo -->
            <Label Text="ðŸ“–"
                   FontSize="80"
                   HorizontalOptions="Center"/>
            
            <Label Text="Voices of Scripture"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource Primary}"/>
            
            <!-- Status Message -->
            <Label Text="{Binding StatusMessage}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource TextColor}"
                   Margin="0,20,0,0"/>
            
            <!-- Progress Bar -->
            <ProgressBar Progress="{Binding Progress}"
                        IsVisible="{Binding IsInitializing}"
                        ProgressColor="{DynamicResource Primary}"
                        WidthRequest="300"
                        HorizontalOptions="Center"/>
            
            <!-- Activity Indicator -->
            <ActivityIndicator IsRunning="{Binding IsInitializing}"
                             IsVisible="{Binding IsInitializing}"
                             Color="{DynamicResource Primary}"
                             WidthRequest="40"
                             HeightRequest="40"/>
            
            <!-- Error Message -->
            <Border IsVisible="{Binding HasError}"
                    Padding="20"
                    Margin="0,20,0,0"
                    BackgroundColor="{DynamicResource Warning}"
                    Stroke="{DynamicResource Danger}"
                    StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="âš ï¸ Setup Required"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap"/>
                    
                    <Button Text="Continue Anyway"
                            Clicked="OnContinueClicked"
                            BackgroundColor="White"
                            TextColor="{DynamicResource Danger}"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>
