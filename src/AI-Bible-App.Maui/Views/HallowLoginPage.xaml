<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AI_Bible_App.Maui.ViewModels"
             x:Class="AI_Bible_App.Maui.Views.HallowLoginPage"
             x:DataType="viewmodels:HallowLoginViewModel"
             Title="Welcome"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">
    
    <!-- Hallow-inspired dark gradient background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1A0A2E" Offset="0.0"/>
                <GradientStop Color="#2D1B4E" Offset="0.5"/>
                <GradientStop Color="#1A0A2E" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Subtle cross pattern overlay -->
        <BoxView Color="#FFFFFF" Opacity="0.02" />
        
        <ScrollView>
            <Grid RowDefinitions="*,Auto,Auto" Padding="32,60,32,40" MinimumHeightRequest="600">
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- HEADER - Logo and Welcome Text                               -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <VerticalStackLayout Grid.Row="0" Spacing="20" VerticalOptions="Center">
                    
                    <!-- Animated glow effect behind icon -->
                    <Border WidthRequest="120" HeightRequest="120"
                            StrokeShape="RoundRectangle 60"
                            StrokeThickness="0"
                            HorizontalOptions="Center">
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#8B5CF6" Offset="0.0"/>
                                <GradientStop Color="Transparent" Offset="1.0"/>
                            </RadialGradientBrush>
                        </Border.Background>
                        <Label Text="âœï¸" 
                               FontSize="56" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <!-- App Name -->
                    <Label Text="Voices of Scripture" 
                           FontSize="36" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"/>
                    
                    <!-- Tagline -->
                    <Label Text="Walk with biblical figures through&#x0a;AI-powered conversations" 
                           FontSize="18" 
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="#A78BFA"
                           LineHeight="1.4"/>
                    
                    <!-- Features highlight -->
                    <VerticalStackLayout Spacing="12" Margin="0,30,0,0">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="ðŸ“–" FontSize="20"/>
                            <Label Text="Chat with Moses, Paul, Mary &amp; more"
                                   FontSize="14" TextColor="#D8B4FE"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="ðŸ™" FontSize="20"/>
                            <Label Text="Generate personalized prayers"
                                   FontSize="14" TextColor="#D8B4FE"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="ðŸ’¡" FontSize="20"/>
                            <Label Text="Daily devotionals &amp; reflections"
                                   FontSize="14" TextColor="#D8B4FE"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- MAIN ACTION BUTTONS                                          -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <VerticalStackLayout Grid.Row="1" Spacing="16" Padding="0,40,0,0">
                    
                    <!-- Try For Free - Primary CTA -->
                    <Button Text="Try for Free"
                            Command="{Binding TryForFreeCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="30">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#7C3AED" Offset="0.0"/>
                                <GradientStop Color="#A78BFA" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    
                    <!-- Log In - Secondary CTA -->
                    <Button Text="I already have an account"
                            Command="{Binding ShowLoginCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            BackgroundColor="Transparent"
                            TextColor="#A78BFA"
                            FontSize="16"
                            HeightRequest="50"
                            BorderColor="#4C1D95"
                            BorderWidth="1"
                            CornerRadius="25"/>
                    
                    <!-- Loading indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#A78BFA"
                                       HeightRequest="30"
                                       HorizontalOptions="Center"/>
                    
                    <!-- Error message -->
                    <Border IsVisible="{Binding HasError}"
                            BackgroundColor="#7F1D1D"
                            StrokeShape="RoundRectangle 12"
                            StrokeThickness="0"
                            Padding="16">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#FCA5A5"
                               FontSize="14"
                               HorizontalTextAlignment="Center"/>
                    </Border>
                </VerticalStackLayout>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- FOOTER - Terms and Privacy                                   -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <VerticalStackLayout Grid.Row="2" Spacing="8" Padding="0,30,0,0">
                    <Label HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           FontSize="12"
                           TextColor="#6B7280">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="By continuing, you agree to our "/>
                                <Span Text="Terms of Service" 
                                      TextColor="#A78BFA"
                                      TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenTermsCommand}"/>
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           FontSize="12"
                           TextColor="#6B7280">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="and "/>
                                <Span Text="Privacy Policy" 
                                      TextColor="#A78BFA"
                                      TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPrivacyCommand}"/>
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
                
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
