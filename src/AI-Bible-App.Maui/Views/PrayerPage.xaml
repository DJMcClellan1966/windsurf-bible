<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AI_Bible_App.Maui.ViewModels"
             xmlns:models="clr-namespace:AI_Bible_App.Core.Models;assembly=AI-Bible-App.Core"
             xmlns:controls="clr-namespace:AI_Bible_App.Maui.Controls"
             x:Class="AI_Bible_App.Maui.Views.PrayerPage"
             x:DataType="vm:PrayerViewModel"
             Title="{Binding Title}">
    
    <!-- Hallow gradient background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource HallowDarkPurple}" Offset="0.0" />
            <GradientStop Color="{StaticResource HallowDeepBlue}" Offset="0.5" />
            <GradientStop Color="{StaticResource HallowMidPurple}" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header Card -->
            <Frame Padding="20" Margin="0,10,0,0"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ™ Prayer Generator"
                           FontSize="26"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    <BoxView HeightRequest="3" WidthRequest="60" CornerRadius="1.5"
                             HorizontalOptions="Center" Margin="0,5,0,5">
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="{StaticResource HallowAccentPurple}" Offset="0.0" />
                                <GradientStop Color="{StaticResource HallowRose}" Offset="1.0" />
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>
                    <Label Text="Share your prayer request and receive a personalized prayer"
                           FontSize="14"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource HallowTextSecondary}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Prayer Request Input -->
            <Frame Padding="15"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="Transparent"
                   CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Your Prayer Request:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    <Editor Text="{Binding PrayerRequest}"
                            Placeholder="What would you like to pray about?"
                            PlaceholderColor="{StaticResource HallowTextMuted}"
                            TextColor="{StaticResource HallowTextPrimary}"
                            BackgroundColor="Transparent"
                            MaxLength="1000"
                            HeightRequest="120"
                            AutoSize="TextChanges"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Personalization Toggle -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,5">
                <Label Grid.Column="0"
                       Text="âœ¨ Personalization Options"
                       FontSize="14"
                       VerticalOptions="Center"
                       TextColor="{StaticResource HallowAccentPurple}"/>
                <Switch Grid.Column="1"
                        IsToggled="{Binding ShowAdvancedOptions}"
                        OnColor="{StaticResource HallowAccentPurple}"/>
            </Grid>

            <!-- Advanced Personalization Options -->
            <Frame IsVisible="{Binding ShowAdvancedOptions}"
                   Padding="15"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="{StaticResource HallowAccentPurple}"
                   CornerRadius="15">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- Mood Selection -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="How are you feeling?" FontSize="13" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Picker ItemsSource="{Binding AvailableMoods}"
                                SelectedItem="{Binding SelectedMood}"
                                Title="Select mood (optional)"
                                TextColor="{StaticResource HallowTextPrimary}"/>
                    </VerticalStackLayout>

                    <!-- Prayer Style -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Prayer Type" FontSize="13" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Picker ItemsSource="{Binding AvailableStyles}"
                                SelectedItem="{Binding SelectedStyle}"
                                Title="Select type"
                                TextColor="{StaticResource HallowTextPrimary}"/>
                    </VerticalStackLayout>

                    <!-- Two Column Layout -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="Length" FontSize="13" TextColor="{StaticResource HallowTextSecondary}"/>
                            <Picker ItemsSource="{Binding AvailableLengths}"
                                    SelectedItem="{Binding SelectedLength}"
                                    TextColor="{StaticResource HallowTextPrimary}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Style" FontSize="13" TextColor="{StaticResource HallowTextSecondary}"/>
                            <Picker ItemsSource="{Binding AvailableTraditions}"
                                    SelectedItem="{Binding SelectedTradition}"
                                    TextColor="{StaticResource HallowTextPrimary}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Praying For -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Praying for (name or relationship)" FontSize="13" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Entry Text="{Binding PrayingFor}"
                               Placeholder="e.g., my mother, John, my team"
                               PlaceholderColor="{StaticResource HallowTextMuted}"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                    </VerticalStackLayout>

                    <!-- Life Circumstances -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Life circumstances (optional)" FontSize="13" TextColor="{StaticResource HallowTextSecondary}"/>
                        <Entry Text="{Binding LifeCircumstances}"
                               Placeholder="e.g., new job, health challenge"
                               PlaceholderColor="{StaticResource HallowTextMuted}"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                    </VerticalStackLayout>

                    <!-- Include Scripture Toggle -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Include Scripture inspiration"
                               FontSize="13"
                               VerticalOptions="Center"
                               TextColor="{StaticResource HallowTextPrimary}"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IncludeScripture}"
                                OnColor="{StaticResource HallowAccentPurple}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Generate Button -->
            <Button Text="Generate Prayer"
                    Command="{Binding GeneratePrayerCommand}"
                    IsEnabled="{Binding IsGenerating, Converter={StaticResource InvertedBoolConverter}}"
                    HeightRequest="55"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="{StaticResource HallowTextPrimary}"
                    CornerRadius="25">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="{StaticResource HallowAccentPurple}" Offset="0.0" />
                        <GradientStop Color="{StaticResource HallowRose}" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsGenerating}"
                             IsVisible="{Binding IsGenerating}"
                             Color="{StaticResource HallowAccentPurple}"
                             WidthRequest="50"
                             HeightRequest="50"
                             HorizontalOptions="Center"/>

            <!-- Generated Prayer -->
            <Frame IsVisible="{Binding GeneratedPrayer, Converter={StaticResource StringNotEmptyConverter}}"
                   Padding="20"
                   BackgroundColor="{StaticResource HallowCardBackground}"
                   BorderColor="{StaticResource HallowAccentPurple}"
                   CornerRadius="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Your Prayer:"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource HallowAccentPurple}"/>
                    <controls:BibleLinkLabel LinkedText="{Binding GeneratedPrayer}"
                           FontSize="15"
                           LineHeight="1.5"
                           LineBreakMode="WordWrap"
                           TextColor="{StaticResource HallowTextPrimary}"/>
                    
                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,10,0,0">
                        <Button Grid.Column="0"
                                Text="ðŸ’¾ Save"
                                Command="{Binding SavePrayerCommand}"
                                BackgroundColor="{StaticResource HallowAccentPurple}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="12"
                                HeightRequest="44"/>
                        <Button Grid.Column="1"
                                Text="ðŸ“ Reflect"
                                Command="{Binding SaveToReflectionsCommand}"
                                BackgroundColor="{StaticResource HallowMidPurple}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="12"
                                HeightRequest="44"/>
                        <Button Grid.Column="2"
                                Text="ðŸ†• New"
                                Command="{Binding NewPrayerCommand}"
                                BackgroundColor="{StaticResource HallowCardHover}"
                                TextColor="{StaticResource HallowTextPrimary}"
                                CornerRadius="12"
                                HeightRequest="44"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Saved Prayers Section -->
            <VerticalStackLayout Spacing="10" Margin="0,10,0,20">
                <Label Text="ðŸ’¾ Saved Prayers"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource HallowTextPrimary}"/>
                
                <CollectionView ItemsSource="{Binding SavedPrayers}"
                               SelectionMode="Single"
                               SelectedItem="{Binding SelectedPrayer}">
                    <CollectionView.EmptyView>
                        <Label Text="No saved prayers yet"
                               FontSize="14"
                               TextColor="{StaticResource HallowTextMuted}"
                               HorizontalOptions="Center"
                               Margin="0,20"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Prayer">
                            <Frame Padding="15" Margin="0,0,0,10"
                                   BackgroundColor="{StaticResource HallowCardBackground}"
                                   BorderColor="Transparent"
                                   CornerRadius="12">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding Topic}"
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource HallowTextPrimary}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>
                                    <Label Text="{Binding CreatedAt, Converter={StaticResource UtcToLocalTimeConverter}, StringFormat='{0:MMMM d, yyyy h:mm tt}'}"
                                           FontSize="12"
                                           TextColor="{StaticResource HallowTextMuted}"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
